---
import Layout from '../../layouts/Layout.astro';
import { ciudades } from '../../data/ciudades';

// Obtener los datos de la ciudad desde el archivo de datos
const ciudadId = 'medellin';
const ciudad = ciudades[ciudadId];
---

<Layout title={`Intercambios - ${ciudad.nombre}`}>
  <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="bg-white rounded-lg shadow-md overflow-hidden mb-8">
      <img src={ciudad.imagen} alt={ciudad.nombre} class="w-full h-96 object-cover" />
      <div class="p-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-4">{ciudad.nombre}</h1>
        <p class="text-xl text-gray-600">{ciudad.descripcion}</p>
        
        <!-- Aquí puedes agregar contenido personalizado para Medellín -->
        <div class="mt-6 p-4 bg-gray-100 rounded-lg">
          <h2 class="text-2xl font-semibold mb-3">Sobre Platohedro</h2>
          <p>Platohedro es un espacio cultural y artístico ubicado en el barrio Buenos Aires de Medellín, 
          que promueve la experimentación, la colaboración y el intercambio de saberes.</p>
          
          <!-- Puedes agregar más contenido personalizado aquí -->
        </div>
      </div>
    </div>

    <h2 class="text-3xl font-bold text-white mb-8">Eventos y Actividades</h2>

   <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {ciudad.eventos.map((evento) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          {evento.video ? (
            <div class="aspect-w-16 aspect-h-9">
              <iframe
                src={evento.video}
                class="w-full h-full"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
          ) : (
            <img src={evento.imagen} alt={evento.titulo} class="w-full h-48 object-cover" />
          )}
          <div class="p-6">
            <h3 class="text-xl font-semibold text-gray-900 mb-2">{evento.titulo}</h3>
            <p class="text-gray-500 mb-2">{evento.fecha}</p>
            <p class="text-gray-600 line-clamp-2">{evento.descripcion}</p>
            <a 
              href={`/intercambios/medellin/${evento.id}`} 
              class="mt-4 inline-block px-4 py-2 bg-primary text-white rounded-md hover:bg-purple-700 transition-colors"
            >
              Ver más
            </a>
          </div>
        </div>
      ))}
    </div>
  </main>
</Layout>
