</Layout>

<script>
  // Initialize GLightbox when the page loads
  document.addEventListener('astro:page-load', () => {
    // @ts-ignore
    if (typeof window.GLightbox !== 'undefined') {
      // @ts-ignore
      const lightbox = window.GLightbox({
        selector: '.glightbox',
        touchNavigation: true,
        loop: true,
        autoplayVideos: true
      });
    }
  });

  // Fallback for when astro:page-load is not triggered
  window.addEventListener('load', () => {
    // @ts-ignore
    if (typeof window.GLightbox !== 'undefined') {
      // @ts-ignore
      const lightbox = window.GLightbox({
        selector: '.glightbox',
        touchNavigation: true,
        loop: true,
        autoplayVideos: true
      });
    }
  });
</script>
